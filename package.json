{
    "name": "@zenithbuild/cli",
    "version": "0.3.0",
    "description": "CLI for Zenith framework - dev server, build tools, and plugin management",
    "type": "module",
    "bin": {
        "zenith": "./bin/zenith"
    },
    "main": "./src/index.ts",
    "types": "./src/index.ts",
    "exports": {
        ".": {
            "types": "./src/index.ts",
            "import": "./src/index.ts"
        }
    },
    "files": [
        "bin",
        "src"
    ],
    "scripts": {
        "dev": "bun dev",
        "build": "bun build",
        "start": "bun run build && bun run dev",
        "test": "bun test"
    },
    "keywords": [
        "zenith",
        "cli",
        "framework",
        "ssg",
        "ssr"
    ],
    "author": "Zenith Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:zenithbuild/zenith-cli.git"
    },
    "private": false,
    "peerDependencies": {
        "@zenithbuild/core": "^0.1.0"
    },
    "devDependencies": {
        "@types/bun": "latest"
    },
    "dependencies": {
        "picocolors": "^1.0.0"
    }
}
